#!/bin/bash
if [[ $1 == "use" ]]; then
  if [[ -n $2 ]]; then
    rm -f $GVM_ROOT/gos/default
    ln -s $GVM_ROOT/gos/go-$2 $GVM_ROOT/gos/default
    rm -f $GVM_ROOT/pkgs/default
    ln -s $GVM_ROOT/pkgs/go-$2 $GVM_ROOT/pkgs/default
    echo "Now using version $2"
    exit 0
  else
    echo "ERROR: Please specifiy the version"
    exit 1
  fi
else
  echo "Please use gvm [action] to call this file"
  exit 1
fi

