#!/bin/bash
function gvm_check_dep() {
  if [ -z `which $1` ]; then
    echo '* Could not find $2 (try `sudo apt-get install $3`)'
    exit 1
  fi
}

gvm_check_dep "hg", "mercurial", "mercurial"
gvm_check_dep "ar", "binutils", "binutils (or binutils-multiarch)"
gvm_check_dep "bison", "bison", "bison"
gvm_check_dep "gcc", "gcc", "gcc"
